    section.well.text-center.text-md-left
        .container
            div.col-inset-2.text-center.btn-group(aria-label="First group" role="group")
                a(href='#').btn.btn-default.round-small.active 1
                a(href='#').btn.btn-default.round-small 2
                a(href='#').btn.btn-default.round-small 3
                span.text-light-clr.font-secondary ...
                a(href='#').btn.btn-default.round-small 8
    //End section



block footer
    -var footer_class = "page-footer footer-centered text-center"
    include ../features/footer_centered