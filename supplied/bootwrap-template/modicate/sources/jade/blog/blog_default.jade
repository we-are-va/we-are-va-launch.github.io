

extends ../layouts/default
include ../mixins/mixins


block vars
    - var active = "Blog"
    - var title = "Default blog"
    - var header_class = "page-header subpage_header"

block head

block header

    -var header_h1 = "Our Latest News"
    -var header_small = "Blog"
    -var header_big = ""
    -var header_content = ""
    include ../features/header_transparent

block content
    section.section-border.text-center.text-md-left
        .container
                ol.breadcrumb
                    li: a(href="index.html") Home
                    li: a(href="#") Blog
                    li.active: a(href="#") Default blog

    = '\n'
    //Start section
    section.text-center.text-md-left.offset-1
        .container
            .row
                .col-xs-12.section-border
                    article.thumbnail.well
                        img(src="images/blog-1.jpg" alt="")
