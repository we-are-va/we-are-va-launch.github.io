                        .blog-info
                            .pull-md-left
                                time(datetime="2015").meta.fa-calendar Feb 10, 2014
                                a.badge.fa-user.text-uppercase.font-secondary Admin
                                span.tags
                                    a.badge.fa-tags
                                    a.post-tag.round-xl.small General
                                    a.post-tag.round-xl.small Media
                                a.badge.fa-comments.text-uppercase.font-secondary 13 comments
                            a(href="blog_post.html").btn-link Read More

                //End video


                = '\n'
                //Start section slider

                .col-xs-12.section-border
                    article.well
                        //Swiper
                        .swiper-container.swiper-slider(data-autoplay="5000" data-slide-effect="fade" data-loop="false" data-height="36.32478632478632%")
                            .swiper-wrapper
                                .swiper-slide(data-slide-bg="images/blog-1.jpg")
                                    .swiper-slide-caption

                                .swiper-slide(data-slide-bg="images/blog-2.jpg")
                                    .swiper-slide-caption

                        h4: a(href="blog_post.html") This is a Standard Post with a Slider Gallery
