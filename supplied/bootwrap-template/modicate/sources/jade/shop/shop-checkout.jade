

extends ../layouts/default
include ../mixins/mixins


block vars
    - var active = "Shop"
    - var title = "Checkout"
    - var header_class = "page-header subpage_header"

block head

block header

    -var header_h1 = "Checkout"
    -var header_small = "Shop"
    -var header_big = ""
    -var header_content = ""
    include ../features/header_transparent

block content
    section.section-border.text-center.text-md-left
        .container
                ol.breadcrumb
                    li: a(href="index.html") Home
                    li: a(href="#") Shop
                    li.active: a(href="#") Checkout


    = '\n'
    //Start section
    section.well
        .container
            .row
                .col-xs-12
                    table.table
                        colgroup
                            col.col-xs-12
                            col.col-xs-12

                        tbody.text-darker-clr
                            tr.section-border-white
                                td.bg-lighter-2 Returning customer? #[a(href='#').text-primary Click here to login]
                                td.bg-lighter-2
                            tr.section-border-white
                                td.bg-lighter-2 Have a coupon? #[a(href='#').text-primary Click here to enter your code]
                                td.bg-lighter-2
    //End section

    = '\n'
    //Start section
    section.well
        .container
            .row
                .col-sm-12.col-md-6
                    h4 Billing Details
                    form.row.offset-5
                        .col-xs-6
                                div.form-group
                                    label(for="exampleInputText1").text-uppercase.font-secondary First Name *
                                    input(type="text" placeholder="Your Name").form-control.round-small#exampleInputText1
                        .col-xs-6
                                div.form-group
                                    label(for="exampleInputText2").text-uppercase.font-secondary Last Name *
                                    input(type="text" placeholder="Last Name").form-control.round-small#exampleInputText2
                        .col-xs-12
                                div.form-group
                                    label(for="exampleInputText3").text-uppercase.font-secondary Company Name
                                    input(type="text" placeholder="Company").form-control.round-small#exampleInputText3
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputEmail1").text-uppercase.font-secondary Email Address *
                                input(type="email" placeholder="E-Mail").form-control.round-small#exampleInputEmail1
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText4").text-uppercase.font-secondary Phone *
                                input(type="text" placeholder="Phone").form-control.round-small#exampleInputText4
                        .col-xs-12
                            div.form-group
                                label.text-uppercase.font-secondary.select Country *
                                    select.form-control.round-small
                                        option(selected) United Kingdom (UK)
                                        option People's Republic of China (PRC)
                                        option United States of America (USA)
                        .col-xs-12
                            div.form-group
                                label(for="exampleInputText5").text-uppercase.font-secondary Address *
                                input(type="text" placeholder="Street address").form-control.round-small#exampleInputText5
                            div.form-group
                                label(for="exampleInputText6").text-uppercase.font-secondary
                                input(type="text" placeholder="Apartment, suite, unit etc. (optional)").form-control.round-small#exampleInputText6
                            div.form-group
                                label(for="exampleInputText9").text-uppercase.font-secondary Town / City *
                                input(type="text" placeholder="Town / City").form-control.round-small#exampleInputText9
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText7").text-uppercase.font-secondary Country
                                input(type="text" placeholder="Country").form-control.round-small#exampleInputText7
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText8").text-uppercase.font-secondary Postcode *
                                input(type="text" placeholder="Postcode").form-control.round-small#exampleInputText8
                        .col-xs-12
                            .checkbox
                                label
                                    input(type="checkbox" value="")
                                    span.checkbox-field
                                    span.text-dark-variant-2.font-secondary Create an account?

                .col-sm-12.col-md-6.inset-sm
                    h4 Ship to a different address?
                    form.row.offset-5
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText11").text-uppercase.font-secondary First Name *
                                input(type="text" placeholder="Your Name").form-control.round-small#exampleInputText11
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText21").text-uppercase.font-secondary Last Name *
                                input(type="text" placeholder="Last Name").form-control.round-small#exampleInputText21
                        .col-xs-12
                            div.form-group
                                label(for="exampleInputText31").text-uppercase.font-secondary Company Name
                                input(type="text" placeholder="Company").form-control.round-small#exampleInputText31

                        .col-xs-12
                            div.form-group
                                label.text-uppercase.font-secondary.select Country *
                                    select.form-control.round-small
                                        option United Kingdom (UK)
                                        option People's Republic of China (PRC)
                                        option(selected) United States of America (USA)
                        .col-xs-12
                            div.form-group
                                label(for="exampleInputText51").text-uppercase.font-secondary Address *
                                input(type="text" placeholder="Street address").form-control.round-small#exampleInputText51
                            div.form-group
                                label(for="exampleInputText61").text-uppercase.font-secondary
                                input(type="text" placeholder="Apartment, suite, unit etc. (optional)").form-control.round-small#exampleInputText61
                            div.form-group
                                label(for="exampleInputText91").text-uppercase.font-secondary Town / City *
                                input(type="text" placeholder="Town / City").form-control.round-small#exampleInputText91
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText71").text-uppercase.font-secondary Country
                                input(type="text" placeholder="Country").form-control.round-small#exampleInputText71
                        .col-xs-6
                            div.form-group
                                label(for="exampleInputText81").text-uppercase.font-secondary Postcode *
                                input(type="text" placeholder="Postcode").form-control.round-small#exampleInputText81
                        .col-xs-12
                            div.form-group
                                label(for="Text81").text-uppercase.font-secondary Order Notes
                                //input(type="text" placeholder="Postcode").form-control.round-small#exampleInputText81
                                textarea#Text81.form-control.round-small

    //End section

    = '\n'
    //Start section
    section.offset-4.well-inset-2.checkout
        .container
            h4 Your order
            .row.offset-5
                .col-sm-12.col-md-6
                    table.table
                        colgroup
                            col.col-xs-6
                            col.col-xs-6
                        thead
                            tr.bg-lighter.text-uppercase.text-darker-clr.font-secondary.section-border
                                th Product
                                th Total
                        tbody
                            tr.section-border
                                td.bg-white.section-border.text-dark-variant-2 Robin Shirt   x1
                                td.bg-white.section-border.text-dark-variant-2 $94.95
                            tr.section-border
                                th.bg-lighter-2.text-uppercase.text-darker-clr.font-secondary.letter-spacing-1 SUBTOTAL
                                td.bg-white.text-dark-variant-2 $94.95
                            tr.section-border
                                th.bg-lighter-2.text-uppercase.text-darker-clr.font-secondary.letter-spacing-1 SHIPPING
                                td.bg-white.text-dark-variant-2 Please fill in your details to see available shipping methods.
                            tr.section-border
                                th.bg-lighter-2.text-uppercase.text-darker-clr.font-secondary.letter-spacing-1 TOTAL
                                td.bg-white.text-dark-variant-2 $94.95

                .col-sm-12.col-md-6.text-right
                    .payment.text-left.round-small
                        .payment-var1.bg-lighter-2.section-border
                            .radio
                                label
                                    input(type="radio" name="blankRadio" id="blankRadio1" value="option1")
                                    span.radio-field
                                    span.text-dark-variant-2.font-secondary Cheque Payment
                            p.text-dark-variant-2 Please send your cheque to Store Name, Store Street, Store Town, Store State / County, Store Postcode.
                        .payment-var2.bg-lighter-2
                            .radio.inline-block
                                label
                                    input(type="radio" name="blankRadio" id="blankRadio2" value="option2")
                                    span.radio-field
                                    span.text-dark-variant-2.font-secondary PayPal
                            a(href='#').text-primary What is PayPal?
                            .image-wrapper
                                a(href='#'): img(alt='' src='images/shop-pay-1.png')
                                a(href='#'): img(alt='' src='images/shop-pay-2.png')
                                a(href='#'): img(alt='' src='images/shop-pay-3.png')
                                a(href='#'): img(alt='' src='images/shop-pay-4.png')
                                a(href='#'): img(alt='' src='images/shop-pay-5.png')
                    a(href='#').offset-5.btn.btn-primary.btn-xs.round-small Place order


block footer
    -var footer_class = "page-footer footer-centered text-center"
    include ../features/footer_centered